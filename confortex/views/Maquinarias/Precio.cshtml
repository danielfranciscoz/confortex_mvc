
<div class="modal fade right" id="modalpreciocreate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-animation="false">
    <div class="modal-dialog modal-sm" role="document">
        <!--Content-->
        <div class="modal-content">

            <!--Header-->
            <div class="modal-header light-green  white-text">
                <button type="button" class="close waves-effect waves-light" data-dismiss="modal" aria-label="Close" data-animation="false" data-tooltip="tooltip" data.placement="right" title="Cerrar esta ventana">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="title"><i class="fa fa-dollar  "></i> {{gestion}} Coste de Energía Eléctrica</h4>
            </div>
            <!--Body-->
            <div class="modal-body mb-0">

                <div class="form-horizontal">


                 
                    <div class="form-group">
                        <label class="control-label ">Costo de la Energía Eléctrica por KWH</label>

                        <input class="text-box single-line" type="text" data-tooltip="tooltip" data-placement="right" title="Escriba el precio de la energía eléctrica" data-animation="false" ng-model="precio" ng-keyup="EsPrecio()" />

                    </div>
                    <div class="form-group font-weight-bold text-center">
                        <div class="text-center">
                            <input type="submit" value="Guardar" class="btn btn-sm light-green darken-4" ng-click="guardar2()" />
                        </div>
                        <p class="red-text">{{message}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

