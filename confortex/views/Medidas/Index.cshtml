@{
    ViewBag.Title = "Medidas";
}

<ng-controller ng-controller="ConMedida">

    <div class="card card-block rounded smooth-scroll">
        <h4 class="h4-responsive  font-weight-bold">Medidas</h4>

        <div class="table-responsive ">
            <table class="table table-hover  table-bordered table-striped" id="table1">
                <thead class="light-green  white-text">
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Medida
                        </th>
                    </tr>
                </thead>

                <tbody ng-click="get()"></tbody>

            </table>

        </div>

        <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
            <a class="btn-floating btn-large green darken-4 ">
                <i class="fa fa-cogs"></i>
            </a>

            <ul>
                <li><a class="btn-floating green" data-animation="false" ng-click="nuevo()" data-tooltip=tooltip data-placement="left" title="Agregar medida "><i class="fa fa-plus"></i></a></li>
                <li><a class="btn-floating yellow darken-1" data-animation="false" ng-click="editar()" data-tooltip=tooltip data-placement="left" title="Edita la medida seleccionada."><i class="fa fa-pencil"></i></a></li>
                <li><a class="btn-floating red" data-animation="false" ng-click="eliminar()" data-tooltip=tooltip data-placement="left" title="Elimina la medida seleccionada."><i class="fa fa-trash-o"></i></a></li>

            </ul>
        </div>
        @Html.Action("Create", "Medidas")
        @Html.Action("DeleteGeneral", "Home");
    </div>
</ng-controller>


<script>
        var table = "";
        $(document).ready(function () {
            $('[data-tooltip=tooltip]').tooltip();
            $('[data-toggle=tab]').tooltip();

            table = $('#table1').DataTable({
                select: true,
                "processing": true,
                "serverSide": true,
                "orderMulti": false,
                "ajax": {
                    "url": "../Medidas/searchMedidas",
                    "type": "POST",
                    "dataType": "JSON"

                },
                "columns": [
                    { "data": "IdMedida", "name": "IdMedida", visible: false },
                    { "data": "Nombre", "name": "Nombre" }
                ],
                "language": {
                    "lengthMenu": "Mostrando _MENU_ Entradas por página",
                    "zeroRecords": "Lo sentimos, no se encuentran concidencias",
                    "info": "Mostrando Página _PAGE_ de _PAGES_ (Registros Totales _TOTAL_)",
                    "infoEmpty": "No hay entradas Disponibles",
                    "infoFiltered": "(filtrar por _MAX_ total entradas)",
                    "search": "Buscar",
                    "paginate": {
                        "previous": "Anterior",
                        "next": "Siguiente"
                    }, "select": {
                        rows: " "
                    }
                }

            });
        });




        app.controller('ConMedida', function ($scope, $http) {

            $scope.idmedida = 0;
            $scope.nombre = "";
          
            $scope.abrirmodal = function () {
                $('#modalmedidacreate').modal({
                    show: true
                });
            }

            $scope.nuevo = function () {

                if ($scope.idmedida == 0) {
                    $scope.abrirmodal();
                } else {
                    $scope.clean();
                    $scope.abrirmodal();
                }

            };

            $scope.editar = function () {

                if ($scope.idmedida > 0) {
                    $scope.abrirmodal();
                }
            };



            $scope.gestionar = function () {
                if ($scope.idmedida > 0) {
                    $scope.modificar();
                } else {
                    $scope.guardar();
                }

            }

            $scope.eliminar = function () {
                if ($scope.idmedida > 0) {
                    $('#Modaldelete').modal({
                        show: true
                    });
                }
            }

                $scope.anular = function(){
                    $http({
                        url: "../Medidas/Delete",
                        method: "POST",
                        data: $.param({ "id": $scope.idmedida }),
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' }
                    }).then(function (response) {
                        if (response.data.Message == "Exito") {
                            $('#Modaldelete').modal('hide');

                        } else {
                            $scope.message = "Error: " + response.data.Message;

                        }

                    }

            )};

            $scope.guardar = function () {

                if ($scope.nombre.length > 0 &&
                    $scope.nombre.length <11
                    ) {
                    $http({
                        url: "../Medidas/create",
                        method: "POST",
                        data: $.param({ "Nombre": $scope.nombre}),
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' }
                    }).then(function (response) {
                        if (response.data.Message == "Exito") {
                            $('#modalmedidacreate').modal('hide');


                        } else {
                            $scope.message = "Error: " + response.data.Message;

                        }

                    }, function (response) {
                        $scope.message = "Error: No se puede Generar la consulta: " + response.status;
                    });
                } else {
                    toastr['warning']('Revise el nombre de la medida. La medida debe contener entre 1 y 10 caracteres');
                }
            }

            $scope.modificar = function () {
                $scope.nombre = $scope.nombre + "";


                if ($scope.nombre.length > 0
                    &&
                    $scope.nombre.length < 11
                   
                    ) {
                    $http({
                        url: "../Medidas/Edit",
                        method: "POST",
                        data: $.param({ "IdMedida": $scope.idmedida, "Nombre": $scope.nombre}),
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' }
                    }).then(function (response) {
                        if (response.data.Message == "Exito") {
                            $('#modalmedidacreate').modal('hide');


                        } else {
                            $scope.message = "Error: " + response.data.Message;

                        }

                    }, function (response) {
                        $scope.message = "Error: No se puede Generar la consulta: " + response.status;
                    });
                } else {
                    toastr['warning']('Revise el nombre de la medida. La medida debe contener entre 1 y 10 caracteres');
                }
            }


            $scope.get = function () {
                setTimeout(function () {
                var idt = table.row('.selected').index();
                $scope.idmedida = table.cell(idt, 0).data();
                $scope.nombre = table.cell(idt, 1).data();
                toastr['success']('Actualmente esta seleccionando la medida '+$scope.nombre);



                }, 100);
            };

            $scope.clean = function () {
                $scope.message = "";
                $scope.idmedida = 0;
                $scope.nombre = "";
                setTimeout(function () {


                    $('#table1').DataTable().ajax.reload();

                }, 100);


            }

            $('#modalmedidacreate').on('hidden.bs.modal', function (e) {

                $scope.clean();

            });
            $('#Modaldelete').on('hidden.bs.modal', function (e) {
                $scope.clean();
            });




            });













</script>
