                            <table class="table " id="table2">
                                <thead class="light-green  white-text" id="tht">
                                    <tr>
                                        <th>
                                            Iddes
                                        </th>
                                        <th>
                                            Idtalla
                                        </th>
                                        <th>
                                            Idmedida
                                        </th>
                                        <th>
                                            Talla
                                        </th>
