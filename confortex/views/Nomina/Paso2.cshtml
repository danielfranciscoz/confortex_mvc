                $scope.abrirmodal();
               
            } else {
                $scope.clean();
                $scope.abrirmodal();
            }
            $('#empleadot').attr('disabled', false);

        };

        $scope.gestionar = function () {
          
            if ($scope.iddetalle > 0) {
                $scope.guardar();
            } else {
