                $scope.jing = $scope.jing + '{"IdOtroIngresoEgreso": ' + table1.cell($scope.i, 0).data() + ' ,"IdDetalleNomina": ' + $scope.iddetalle + ',"Concepto": "' + table1.cell($scope.i, 2).data() + '","Monto":' + table1.cell($scope.i, 3).data() + ',"IsIngreso" : "true" }';


